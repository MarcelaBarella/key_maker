@model Kramer.Models.UserRequestFormViewModel

<div class="form-horizontal">
    <h4>User Request</h4>
    <hr />
    <div class="form-group">
        <label for="Email" class="control-label col-md-2">E-mail</label>
        <div class="col-md-10">
            <input type="text" name="Email" class="form-control" value="@Model.Email">
        </div>
    </div>

    <div class="form-group">
        <label for="Username" class="control-label col-md-2">Nome do usuário</label>
        <div class="col-md-10">
            <input type="text" name="Username" class="form-control" value="@Model.Username">
        </div>
    </div>

    <div class="form-group">
        <select name="SaleType.Id" class="dropdown col-md-offset-2">
            @foreach (var saletype in Model.AvailableSaleTypes)
            {
                if (Model.SaleType == null)
                {
                    <option value="@saletype.Id">@saletype.Name</option>
                }
                else
                {
                    <option value="@saletype.Id"
                            @(saletype.Id == Model.SaleType.Id ? "selected" : "")>
                        @saletype.Name
                    </option>
                }
            }
        </select>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input 
                   type="submit" value="@(ViewBag.Action == "Create" ? "Solicitar Novo Usuário" : "Salvar Alterações")" class="btn btn-default" />
        </div>
    </div>
</div>