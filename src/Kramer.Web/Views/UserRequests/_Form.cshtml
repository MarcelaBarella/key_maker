@model Kramer.Infra.UserRequest

<div class="form-horizontal">
    <h4>Solicitação de Usuário</h4>
    <hr />
    <div class="form-group">
        <label for="Email" class="control-label col-md-2">E-mail</label>
        <div class="col-md-10">
            <input type="text" name="Email" class="form-control" >
        </div>
    </div>

    <div class="form-group">
        <label for="Role" class="control-label col-md-2">Canal de Vendas</label>
        <div class="col-md-10">
            <input type="text" name="Role" class="form-control">
        </div>
    </div>

    <div class="form-group">
        <label for="Username" class="control-label col-md-2">Nome do usuário</label>
        <div class="col-md-10">
            <input type="text" name="Username" class="form-control">
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input 
                   type="submit" value="@(ViewBag.Action == "Create" ? "Solicitar Novo Usuário" : "Salvar Alterações")" class="btn btn-default" />
        </div>
    </div>
</div>