@model Kramer.Models.UserRequestFormViewModel

<div class="form-horizontal">
    <h4>User Request</h4>
    <hr />
    <div class="form-group">
        <label for="Email" class="control-label col-md-2">E-mail</label>
        <div class="col-md-10">
            <input type="text" name="Email" class="form-control" value="@Model.Email">
        </div>
    </div>

    <div class="form-group">
        <label for="Username" class="control-label col-md-2">Name</label>
        <div class="col-md-10">
            <input type="text" name="Name" class="form-control" value="@Model.Name">
        </div>
    </div>

    <div class="form-group">
        <label for="Usertype" class="control-label col-md-2">User Type</label>
        <div class="radio-inline">
            <label><input type="radio" name="optradio" id="UsertypeGM" value="UsertypeGM" />Global Master</label>
        </div>
        <div class="radio-inline">
            <label><input type="radio" name="optradio" id="UsertypeST" value="UsertypeST" />Sale Type</label>
        </div>
    </div>

    <div class="form-group">
        <label for="SaleType" class="control-label col-md-2">Sale Type</label>
        <select id="saletypedrop" name="SaleType.Id" class="dropdown col-md-offset-2"/>
            @foreach (var saletype in Model.AvailableSaleTypes)
            {
                if (Model.SaleType == null)
                {
                    <option value="@saletype.Id">@saletype.Name</option>
                }
                else
                {
                    <option value="@saletype.Id"
                            @(saletype.Id == Model.SaleType.Id ? "selected" : "")>
                        @saletype.Name
                    </option>
                }
            }
        </select>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input 
                   type="submit" value="@(ViewBag.Action == "Create" ? "Solicitar Novo Usuário" : "Salvar Alterações")" class="btn btn-default" />
        </div>
    </div>
</div>
@section Script {
    @Scripts.Render("~/bundles/jquery-1.10.2.js")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(document).ready(function () {
            $('input[name="optradio"]').click(function () {
                if ($('input[name="optradio"]').is(':checked')) {
                    var radioValue = $("input[name='optradio']:checked").val();
                    if (radioValue == "UsertypeGM") {
                        $("#saletypedrop").prop("disabled", true);
                        $("#saletypedrop").val("null");
                    } else {
                        $("#saletypedrop").prop("disabled", false);
                    }
                }
            });
        });
    </script>
    
    
    }


